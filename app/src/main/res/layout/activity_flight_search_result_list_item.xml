<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--Departure Leg Details-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/departureAirlineImageIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/leg1DepartureTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/spacing_16"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/departureAirlineImageIV"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="15:35" />

        <TextView
            android:id="@+id/leg1TimeSeparator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/spacing_4"
            android:text="-"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/leg1DepartureTimeTV"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/leg1ArrivalTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/spacing_4"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/leg1TimeSeparator"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="15:35" />

        <TextView
            android:id="@+id/departureStopsNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Stops" />

        <TextView
            android:id="@+id/departureLegDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_8"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/departureStopsNameTV"
            tools:text="2h 55m" />

        <TextView
            android:id="@+id/departureLegNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/spacing_16"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/departureAirlineImageIV"
            app:layout_constraintTop_toBottomOf="@id/leg1DepartureTimeTV"
            tools:text="BUD-LGW" />

        <TextView
            android:id="@+id/departureAirlineNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/spacing_8"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/departureLegNameTV"
            app:layout_constraintTop_toBottomOf="@id/leg1DepartureTimeTV"
            tools:text="Wiz Air" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--Arrival Leg Details-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/arrivalAirlineImageIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/leg2ArrivalTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/spacing_16"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/arrivalAirlineImageIV"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="15:35" />

        <TextView
            android:id="@+id/leg2TimeSeparator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/spacing_4"
            android:text="-"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/leg2ArrivalTimeTV"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/leg2DepartureTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/spacing_4"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/leg2TimeSeparator"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="15:35" />

        <TextView
            android:id="@+id/arrivalStopsNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Stops" />

        <TextView
            android:id="@+id/arrivalLegDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_8"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/arrivalStopsNameTV"
            tools:text="2h 55m" />

        <TextView
            android:id="@+id/arrivalLegNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/spacing_16"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/arrivalAirlineImageIV"
            app:layout_constraintTop_toBottomOf="@id/leg2DepartureTimeTV"
            tools:text="BUD-LGW" />

        <TextView
            android:id="@+id/arrivalAirlineNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/spacing_8"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/arrivalLegNameTV"
            app:layout_constraintTop_toBottomOf="@id/leg2DepartureTimeTV"
            tools:text="Wiz Air" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/spacing_8"
        android:background="@android:color/darker_gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itineraryPriceTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_12"
            android:layout_marginTop="@dimen/spacing_12"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_gravity="end"
            tools:text="$35" />

        <TextView
            android:id="@+id/itineraryAgentNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_12"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            android:layout_gravity="end"
            tools:text="via Wizzair.com" />
    </LinearLayout>

</LinearLayout>